@page
@model GestaoProff.Models.ProfessorModel

<h2>Editar Professor</h2>

<form asp-action="Editar">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="IdProfessor" />

    <div class="form-group">
        <label asp-for="NomeProfessor" class="control-label"></label>
        <input asp-for="NomeProfessor" class="form-control" />
        <span asp-validation-for="NomeProfessor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IdDisciplina" class="control-label"></label>
        <input asp-for="IdDisciplina" class="form-control" />
        <span asp-validation-for="IdDisciplina" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
</form>

