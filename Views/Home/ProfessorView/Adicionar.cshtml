@page
@model GestaoProff.Models.ProfessorModel

<h2>Adicionar Novo Professor</h2>

<form method="post">
    <div>
        <label asp-for="NomeProfessor">Nome do Professor:</label>
        <input asp-for="NomeProfessor" />
        <span asp-validation-for="NomeProfessor"></span>
    </div>
    <div>
        <label asp-for="Disciplina">Disciplina:</label>
        <input asp-for="Disciplina" />
        <span asp-validation-for="Disciplina"></span>
    </div>
    <button type="submit">Salvar</button>
</form>

