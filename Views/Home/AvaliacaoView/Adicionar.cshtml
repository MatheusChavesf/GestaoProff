@page
@model GestaoProff.Models.AvaliacaoModel

<h2>Adicionar Avaliação</h2>

<form asp-action="Adicionar">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="TipoAvaliacao" class="control-label"></label>
        <input asp-for="TipoAvaliacao" class="form-control" />
        <span asp-validation-for="TipoAvaliacao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataAvaliacao" class="control-label"></label>
        <input asp-for="DataAvaliacao" type="date" class="form-control" />
        <span asp-validation-for="DataAvaliacao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IdDisciplina" class="control-label"></label>
        <input asp-for="IdDisciplina" class="form-control" />
        <span asp-validation-for="IdDisciplina" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index">Voltar para a Lista</a>
